<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.semanticui.min.css" />
<center>
    <div class="subtitle-font mt-5 mb-5">Retail Dashboard</div>
</center>
<div class="container">
    <table id="example" class="ui celled table" style="width:100%">
        <thead>
            <tr>
                <td>SKU</td>
                <td>Keywords</td>
                <td>Description</td>
                <td>Product URL</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>

            <tr>
                <form method="POST" action="/retail">
                    <td><textarea class="textBox" placeholder="SKU" name="sku" required></textarea></td>
                    <td><textarea class="textBox" placeholder="Keywords" name="keywords" required></textarea></td>
                    <td><textarea class="textBox" placeholder="Description" name="description" required></textarea></td>
                    <td><textarea class="textBox" placeholder="Product URL" name="url" required></textarea></td>
                    <td><button type="submit"
                            class="btn btn-success">&nbsp;add&nbsp;new&nbsp;</button>&nbsp;&nbsp;<button
                            class="btn btn-danger" type="reset">clear</button></td>
                </form>
            </tr>

            {{#each products}}


            <tr>
                <form method="post" action="/updateProduct">
                    <td style="display: none;"><input type="text" value="{{this.productId}}" name="productId" hidden />
                    </td>
                    <td><textarea class="textBox" placeholder="SKU" name="sku" required>{{this.SKU}}</textarea></td>
                    <td><textarea class="textBox" placeholder="Keywords" name="keywords"
                            required>{{this.keywords}}</textarea></td>
                    <td><textarea class="textBox" placeholder="Description" name="description"
                            required>{{this.description}}</textarea></td>
                    <td><textarea class="textBox" placeholder="Product URL" name="url" required>{{this.URL}}</textarea>
                    </td>
                    <td><button type="submit" class="btn btn-success">update</button>&nbsp;&nbsp;<button type="button"
                            class="btn btn-danger" onclick="deleteProduct({{this.productId}})">remove</button></td>
                </form>
            </tr>


            {{/each}}
        </tbody>
    </table>
</div>
