<div class="container-fluid d-flex justify-content-center lg">
    <div class="card mt-5 p-4">
        <p class="pb-1">Search for any product</p>
        <form action="/search" method="POST">
            <div class="input-group mb-3"> <input type="text" name="searchBox" class="form-control">
                <div class="input-group-append"><button class="btn btn-primary" type="submit"><i
                            class="fas fa-search"></i></button>
                </div>
            </div>
        </form>

        {{#each products}}
        <div class="d-flex flex-row justify-content-between mb-3">
            <div class="d-flex flex-column p-3">
                <p class="mb-1">{{description}}</p> <small class="text-muted">{{location}}</small>
            </div>
            <div class="price pt-3 pl-3">
                <a href={{URL}} target="_blank">
                    <h5 class="mt-2 ml-1">view</h5>
                </a>
            </div>
        </div>
        {{/each}}
        {{#unless products}}
        <div class="d-flex flex-row justify-content-between mb-3">
            <div class="d-flex flex-column p-3">
                <p class="mb-1">{{message}}</p>
            </div>
        </div>
        {{/unless}}
    </div>
</div>