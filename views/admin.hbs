<center>
    <div class="subtitle-font mt-5 mb-5">Administration</div>
</center>
<div class="container">
    <table id="example" class="ui celled table" style="width:100%">
        <thead>
            <tr>
                <td>Email</td>
                <td>Status</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.email}}</td>
                {{#if this.isActive}}
                <td>enabled</td>
                {{else}}
                <td>disabled</td>
                {{/if}}
                <td><button class="mr-2 btn btn-success" type="button"
                        onclick="enableuser({{this.userId}})">enable-disable</button>
                    <button class="mr-2 btn btn-danger" type="button"
                        onclick="removeuser({{this.userId}})">remove</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
